#!/bin/bash
# Format Python files with autopep8
# Usage: ./format-autopep8 [path]
# Example: ./format-autopep8 workspace/agentwinter/

TARGET=${1:-"workspace/agentwinter/"}

echo "ðŸŽ¨ Formatting with autopep8: $TARGET"
autopep8 --in-place --aggressive --recursive "$TARGET"
echo "âœ… Autopep8 formatting complete!"
