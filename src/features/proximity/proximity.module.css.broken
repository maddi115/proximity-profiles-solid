  .sheet {
    max-width: 700px;
    bottom: 30px;
  }
  
  .sheetActions {
    gap: 16px;
  }
  
  .sheetBtn {
    min-height: 120px;
  }
}

/* Remove backdrop */
.backdrop {
  display: none;
}
