   ======================================== */

.backdrop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
  z-index: 9998;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.sheet {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(180deg, rgba(30, 30, 35, 0.98) 0%, rgba(20, 20, 25, 0.98) 100%);
  backdrop-filter: blur(20px);
  border-radius: 24px 24px 0 0;
  padding: 24px;
  z-index: 9999;
  box-shadow: 0 -10px 40px rgba(0, 0, 0, 0.5);
  animation: slideUp 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
  max-height: 70vh;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.sheetHandle {
  width: 40px;
  height: 4px;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 2px;
  margin: 0 auto 20px;
}

.sheetProfile {
  display: flex;
  align-items: center;
  gap: 16px;
  margin-bottom: 24px;
  padding-bottom: 20px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.sheetAvatar {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  border: 3px solid #ff69b4;
  box-shadow: 0 4px 12px rgba(255, 105, 180, 0.3);
}

.sheetBalance {
  color: white;
  font-size: 28px;
  font-weight: 700;
  text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

.sheetActions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
}

.sheetBtn {
  background: rgba(255, 255, 255, 0.08);
  border: 1px solid rgba(255, 255, 255, 0.15);
  border-radius: 20px;
  padding: 24px 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  cursor: pointer;
  transition: all 0.2s cubic-bezier(0.25, 0.8, 0.25, 1);
  min-height: 120px;
  touch-action: manipulation;
  color: white;
  font-size: 15px;
  font-weight: 500;
  position: relative;
  overflow: hidden;
}

.sheetBtn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 105, 180, 0.1), rgba(147, 51, 234, 0.1));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.sheetBtn:hover::before {
  opacity: 1;
}

.sheetBtn:active {
  transform: scale(0.95);
  background: rgba(255, 105, 180, 0.2);
  border-color: #ff69b4;
}

.sheetEmoji {
  font-size: 42px;
  line-height: 1;
  filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
}

.sheetCost {
  color: rgba(255, 255, 255, 0.5);
  font-size: 13px;
  font-weight: 400;
  margin-top: 4px;
}

.sheetFollowing {
  background: rgba(255, 215, 0, 0.15);
  border-color: rgba(255, 215, 0, 0.4);
}

.sheetFollowing:active {
  background: rgba(255, 215, 0, 0.25);
}

