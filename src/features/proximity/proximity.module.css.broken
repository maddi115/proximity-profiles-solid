.proximity-circle {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 300px;
  height: 300px;
  border: 2px dashed rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  pointer-events: none;
  z-index: 1;
}

.proximity-label {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: rgba(255, 255, 255, 0.5);
  font-size: 12px;
  text-align: center;
  max-width: 200px;
  pointer-events: none;
  z-index: 2;
}

.marker {
  position: absolute;
  cursor: pointer;
  z-index: 100;
  transition: transform 0.2s ease;
}

.marker:hover {
  transform: scale(1.1);
  z-index: 101;
}

.marker-img {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  border: 3px solid rgba(255, 255, 255, 0.8);
  object-fit: cover;
  transition: border-color 0.3s ease;
}

.marker:hover .marker-img {
  border-color: #ff69b4;
}

.balance-badge {
  position: absolute;
  top: -8px;
  right: -8px;
  background: rgba(0, 0, 0, 0.8);
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 11px;
  display: flex;
  align-items: center;
  gap: 4px;
  z-index: 10000;
}

.balance-heart {
  font-size: 14px;
}

.balance-amount {
  color: white;
  font-weight: bold;
}

.following-badge {
  position: absolute;
  top: -8px;
  left: -8px;
  font-size: 24px;
  z-index: 10000;
}

.sent-msg {
  position: absolute;
  top: 10px;
  left: 10px;
  font-size: 90px;
  z-index: 10001;
  will-change: transform, opacity;
  backface-visibility: hidden;
  opacity: 0;
  transform: translate3d(0, 0, 0) scale(0.5);
  animation: reactionAppear 0.3s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

@keyframes reactionAppear {
  0% {
    opacity: 0;
    transform: translate3d(0, 0, 0) scale(0.5);
  }
  100% {
    opacity: 1;
    transform: translate3d(0, 0, 0) scale(1);
  }
}

.tease-amount {
  position: absolute;
  top: -30px;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(255, 105, 180, 0.9);
  color: white;
  padding: 4px 12px;
  border-radius: 12px;
  font-size: 14px;
  font-weight: bold;
  z-index: 10000;
}

.pulse-action {
  position: absolute;
  top: 70px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  gap: 8px;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
  min-width: 200px;
}

.marker:hover .pulse-action {
  opacity: 1;
  pointer-events: auto;
}

.btn {
  background: rgba(0, 0, 0, 0.85);
  color: white;
  border: 1px solid rgba(255, 255, 255, 0.3);
  padding: 8px 16px;
  border-radius: 20px;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 8px;
  font-size: 13px;
  transition: all 0.2s ease;
  white-space: nowrap;
}

.btn:hover {
  background: rgba(255, 105, 180, 0.9);
  border-color: #ff69b4;
  transform: scale(1.05);
}

.btn-emoji {
  font-size: 16px;
}

.following {
  background: rgba(255, 215, 0, 0.2);
  border-color: gold;
}

.tease-btn {
  position: relative;
}

.tease-hint {
  position: absolute;
  bottom: -20px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 10px;
  color: rgba(255, 255, 255, 0.6);
  white-space: nowrap;
}

.holding {
  background: rgba(255, 105, 180, 1);
  transform: scale(1.1);
}

.action-button-wrapper {
  position: relative;
}

.active {
  background: rgba(147, 51, 234, 0.9);
}

.action-form {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  margin-top: 8px;
  background: rgba(0, 0, 0, 0.95);
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 12px;
  padding: 12px;
  z-index: 10001;
}

.action-input {
  width: 100%;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 8px;
  padding: 8px 12px;
  color: white;
  font-size: 12px;
  margin-bottom: 8px;
}

.action-input::placeholder {
  color: rgba(255, 255, 255, 0.5);
}

.action-form-buttons {
  display: flex;
