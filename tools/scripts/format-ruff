#!/bin/bash
# Format and lint Python files with ruff
# Usage: ./format-ruff [path]
# Example: ./format-ruff tools/agentwinter/

TARGET=${1:-"tools/agentwinter/"}

echo "ðŸŽ¨ Linting with ruff: $TARGET"
ruff check --fix "$TARGET"

echo "ðŸŽ¨ Formatting with ruff: $TARGET"
ruff format "$TARGET"

echo "âœ… Ruff formatting and linting complete!"
